<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarsecundario_sem_foto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradiente_toolbar"
        android:theme="@style/Theme.AppCompat">

    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:id="@+id/ic_toolbar_semfoto"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_ajuda"
      android:layout_alignParentRight="true"
        android:layout_margin="8dp"/>

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarsecundario_sem_foto">
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/toolbar_sombra"/>
    </FrameLayout>
</RelativeLayout>
</FrameLayout>