<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".Forum.Novo_Grupo_Forum">

    <include layout="@layout/toolbarsecundario"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtlayout_titulo_conto"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                >
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/titulo_conto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_titulo"
                    android:padding="10dp"
                    android:maxLength="40"
                    android:background="@drawable/bg_edit_text"
                    android:textAlignment="center"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtlayout_descricao_conto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/desc_conto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:hint="@string/descricao"
                    android:background="@drawable/bg_edit_text"
                    android:textAlignment="center"
                    android:minLines="5"
                    android:inputType="textMultiLine"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_marginTop="16dp"
                android:id="@+id/botaosalvarconto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POSTAR"
                android:theme="@style/botaopadrao"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>