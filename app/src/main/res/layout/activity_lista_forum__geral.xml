<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".Forum.Lista_forum_Geral">

    <include layout="@layout/toolbarsecundario_sem_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pretoescrita"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:text="Grupo"

            />

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/nada_encontrado_mercado_inicial"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/cinzadisabilitado"
                android:gravity="center"
                android:textAlignment="center"
                android:text="@string/text_mercado_nd"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecycleViewGrupo_geral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:clipToPadding="false"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pretoescrita"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:text="Topicos"

            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/nada_encontrado_mercado_isddnicial"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/cinzadisabilitado"
                android:gravity="center"
                android:textAlignment="center"
                android:text="@string/text_mercado_nd"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecycleViewTOpico_Geral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:clipToPadding="false"
            />
    </androidx.cardview.widget.CardView>
</LinearLayout>