<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".Forum.Novo_Forum">
<include layout="@layout/toolbarsecundario"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtlayout_titulo_topico"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="100"
        >
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/nome_topico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txt_titulo"
            android:padding="10dp"
            android:maxLength="100"
            android:background="@drawable/bg_edit_text"
            android:textAlignment="center"
            android:inputType="textMultiLine"
            android:minLines="2"
            />
    </com.google.android.material.textfield.TextInputLayout>
<RadioGroup
    android:id="@+id/groupwe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RadioButton
    android:id="@+id/radiogrupo"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="Grupo"/>
    <RadioButton
        android:id="@+id/radiogrupo_Free"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Grupo_Free"/>
    <RadioButton
        android:id="@+id/radiogrupo_permissao"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Grupo_Permissao"/>
    <RadioButton
        android:id="@+id/radiogrupo_privado"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Grupo_Privado"/>
        <RadioButton
            android:id="@+id/radiotopico"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Topico"/>
</RadioGroup>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtlayout_descricao_topico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="400"
        >
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/desc_topico"
            android:maxLength="400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:padding="10dp"
            android:hint="@string/descricao"
            android:background="@drawable/bg_edit_text"
            android:textAlignment="center"
            android:minLines="5"
            android:inputType="textMultiLine"
            />
    </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  >
    <ImageView
        android:id="@+id/imageTopicoCadastro"
        android:layout_width="100dp"
        android:layout_marginRight="8dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/fundoloja"
        />
    <TextView
        android:textAlignment="center"
        android:textColor="@color/cinzasecunradrio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="(OPCIONAL)"/>

</LinearLayout>
    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/botaosalvartopico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CRIAR TÃ“PICO"
        android:theme="@style/botaopadrao"/>
</LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>