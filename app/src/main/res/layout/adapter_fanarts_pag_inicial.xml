<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:backgroundTint="@color/background_cardview"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="2dp"
    cardview:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/cardfanart">

    <FrameLayout
        android:id="@+id/container"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iconefanart"
            android:layout_width="100sp"
            android:layout_height="140sp"
            android:layout_gravity="center"
            android:background="@drawable/gradiente_icone"
            />

        <View
            android:id="@+id/drag_handle"
            android:layout_width="32dp"
            android:layout_height="match_parent" />

            <TextView
              android:visibility="gone"
                android:id="@+id/textpos"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_below="@+id/iconefanart"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontgeek" />

        </RelativeLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>
